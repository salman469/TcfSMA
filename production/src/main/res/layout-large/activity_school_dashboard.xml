<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_school_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".Activities.SchoolDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                app:cardBackgroundColor="@color/white_color"
                app:cardCornerRadius="@dimen/cardview_default_radius">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:text="Select School:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border">

                        <Spinner
                            android:id="@+id/spnSchools"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_view_size"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_weight="0.5"
                    app:cardElevation="@dimen/card_elevation">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding">

                        <TextView
                            android:id="@+id/tv_schoolEnr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_enrollment_text"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_heading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_studentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="0 students"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_studentenrollmentpercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_area_highest_enrollment"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_some"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_launcher" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_view_size"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_weight="0.5"
                    app:cardElevation="@dimen/card_elevation">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding">

                        <TextView
                            android:id="@+id/tv_school_attendance_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_daily_student_attend"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_heading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_school_attendance_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="0%"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_student_attendance_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_daily_student_attend_month"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size"
                            android:visibility="gone" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_view_size"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_weight="0.5"
                    android:visibility="gone"
                    app:cardElevation="@dimen/card_elevation">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding">

                        <TextView
                            android:id="@+id/tv_schooldrprate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_drop_out_rate"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_heading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_studentdrppercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="0%"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_studentdrpmonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/school_drop_out_rate_month"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size"
                            android:visibility="gone" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_weight="1"
                    app:cardElevation="@dimen/card_elevation">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/bt_forceSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/padding"
                            android:text="@string/force_sync"
                            android:textColor="@color/blue"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/notification_alert"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_heading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/update_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="05 Profiles Incomplete"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/update_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="0 Revised Forms Requested"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/update_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="0 Profiles Marked Unapproved"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/update_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="No Enrollment Validate"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_lastSyncOn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="Last sync attempt: DD/MM/YYYY on HH:MM"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_successSync"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dashboard_margin"
                            android:text="Sync status : success"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tv_syncCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending records: xx (count)"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/element_margin"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/bottom_five"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_heading"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/bottom_five_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f7fafc"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_small"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="Name" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:text="GR:NO" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Class/Sec" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Absent Days" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottom_five_header_am"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f7fafc"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_small"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="School Name" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="School Attendance" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_bottom_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/element_margin"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tcf.sma.Views.VerticalTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:text="@string/percentage"
                        android:textColor="@color/colorBlack" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="@dimen/element_margin" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>