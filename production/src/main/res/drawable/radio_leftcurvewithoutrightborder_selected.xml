<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/text_size_small"
                android:bottomLeftRadius="@dimen/text_size_small"
                />
            <solid android:color="@color/colorAccent"></solid>
        </shape>
    </item>
    <!-- Body -->
    <item
        android:right="1dp"
        >
        <shape>
            <corners
                android:topLeftRadius="@dimen/text_size_small"
                android:bottomLeftRadius="@dimen/text_size_small"
                />
            <solid android:color="@color/colorAccent"></solid>
        </shape>
    </item>
</layer-list>