            </com.google.android.material.textfield.TextInputLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/element_margin"
                android:layout_marginRight="40dp"
                android:text="Press Generate Password button appearing below to receive the password on your registered mobile number. Use that password to login to your account and then follow the steps to change your password."
                android:textSize="@dimen/text_size"
                android:visibility="visible" />


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/bt_generate_pin_code"
        style="@style/ButtonStyleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/element_margin"
        android:text="Generate Password" />

</RelativeLayout>