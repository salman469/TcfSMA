<RelativeLayout android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bd"
    android:orientation="vertical"
    tools:context="com.tcf.sma.Activities.ForgotPassword"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include"
        layout="@layout/header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/element_margin"
                android:text="Please enter your CNIC number and Employee Code below"
                android:textSize="@dimen/text_size"
                android:visibility="visible" />



            <LinearLayout

                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_login_left"
                android:layout_marginRight="@dimen/margin_login_right"
                android:layout_marginBottom="@dimen/element_margin2"
                android:background="@drawable/spinner_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_margin2"
                    android:layout_marginBottom="@dimen/element_margin2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_cnic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:drawableLeft="@mipmap/username"
                            android:drawablePadding="@dimen/padding"
                            android:hint="CNIC"
                            android:imeOptions="actionNext"
                            android:maxLength="15"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/padding_small" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#33FFFFFF" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_employeeCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:drawableLeft="@mipmap/user_password"
                            android:drawablePadding="@dimen/padding"
                            android:hint="Employee Code"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:padding="@dimen/padding_small" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!--<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
