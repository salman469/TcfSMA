<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">
                <RelativeLayout
                    android:id="@+id/inner_relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/school_bar"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.9">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="@dimen/padding_small">


                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/new_admission_profile_top_margin"
                            android:layout_marginTop="@dimen/new_admission_header_school_spinner_margin_top"
                            android:background="@drawable/spinner_bg"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_schoolName"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                android:gravity="end"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:text=""
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/white_2"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/headerAreaLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@id/l1"
                            app:layout_constraintTop_toBottomOf="@+id/l1"
                            app:layout_constraintEnd_toEndOf="@id/l1">

                            <TextView
                                android:id="@+id/tv_areaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Landhi"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size"
                                android:layout_marginEnd="@dimen/margin_medium" />

                            <TextView
                                android:id="@+id/tv_regionName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:text="South"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--            <include layout="@layout/search_header_employee" />-->
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/fee_entry_view_header"
            android:layout_width="match_parent"
            app:layout_scrollFlags="enterAlways"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0a713a"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:background="@drawable/top_curved_view_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/searchStdLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="50"
                            android:layout_marginStart="@dimen/margin_medium">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/ic_name"
                                android:layout_gravity="bottom"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/gr_no_icon"
                                android:drawableStart="@drawable/gr_no_icon"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/margin_medium">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:paddingStart="@dimen/padding_small"
                                    android:paddingEnd="@dimen/padding_small"
                                    android:text="Designations: "
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_size" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:orientation="horizontal">


                                    <Spinner
                                        android:id="@+id/spinner_SelectDesignation"
                                        android:layout_width="match_parent"
                                        android:layout_weight="9"
                                        android:spinnerMode="dialog"
                                        android:layout_height="wrap_content" />

                                    <ImageView
                                        android:id="@+id/btn_Search"
                                        android:layout_width="@dimen/imageViewWidth"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="end|center_vertical"
                                        android:layout_marginLeft="@dimen/margin_medium"
                                        android:layout_marginRight="@dimen/margin_medium"
                                        android:background="@color/light_app_green"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        app:srcCompat="@drawable/ic_search"
                                        android:tint="@color/app_green"
                                        android:visibility="gone"
                                        android:backgroundTint="@null"/>


                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cadre"
                                android:layout_gravity="center"
                                android:textSize="@dimen/text_size" />

                            <RadioGroup
                                android:id="@+id/rg_cadre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_small">


                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_cadre_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="All"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_faculty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="Faculty"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_non_faculty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="Non Faculty"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                            </RadioGroup>




                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:layout_gravity="center"
                                android:textSize="@dimen/text_size" />

                            <RadioGroup
                                android:id="@+id/rg_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_small">



                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_status_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="All"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_active"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="Active"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rb_resign"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:background="@drawable/radio_flat_selector"
                                    android:button="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/padding"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="3dp"
                                    android:paddingEnd="@dimen/padding"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="3dp"
                                    android:text="Resigned"
                                    android:textColor="@drawable/radio_flat_text_selector"
                                    android:textSize="@dimen/text_size" />

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/llResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">






                <LinearLayout

                    android:padding="@dimen/padding_small"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:background="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employees Found: "
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_total_employees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/gray"/>

                </LinearLayout>





                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="always">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_empDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="always"
                            tools:listitem="@layout/employee_listing_detail"
                            tools:visibility="visible">

                        </androidx.recyclerview.widget.RecyclerView>
                    </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>