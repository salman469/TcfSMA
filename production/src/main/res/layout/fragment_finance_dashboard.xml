<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cash_inHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_view_size"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="1"
                app:cardCornerRadius="2dp"
                app:cardElevation="@dimen/card_elevation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/CVCashInHand_tvtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_app_green"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="Cash In Hand"
                        android:textColor="@color/grayheadingsdb"
                        android:textSize="@dimen/text_size_heading"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/CVCashInHand_tvtitle"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/CVCashInHand_selectedSchool_tvAmount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/margin_small"
                            android:text="Rs. 0"
                            android:textColor="@color/grayheadingsdb" />

                        <TextView
                            android:id="@+id/CVCashInHand_tvAmount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@+id/CVCashInHand_tvtitle"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/margin_small"
                            android:text="Rs. 0"
                            android:textColor="@color/grayheadingsdb" />

                        <TextView
                            android:id="@+id/CVCashInHand_btnDepositAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@drawable/blue_button_rounded_bg"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:text="Deposit?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_button"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/CVCashInHand_tvDepositisDue"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/margin_small"
                            android:text="Deposit is due"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--Avg Fees Collection-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avg_fees_collection"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_view_size"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="1"
                app:cardCornerRadius="2dp"
                app:cardElevation="@dimen/card_elevation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/CVAvgFeesCollection_tvtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_app_green"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="@string/avg_fees_collection"
                        android:textColor="@color/grayheadingsdb"
                        android:textSize="@dimen/text_size_heading"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/ll_avgFeesCollection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/CVAvgFeesCollection_tvtitle"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Fee Target: "
                                android:textColor="@color/grayheadingsdb" />

                            <TextView
                                android:id="@+id/CVAvgFeesCollection_tvTarget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/grayheadingsdb" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_SetFee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Avg. Set Fee: "
                                android:textColor="@color/grayheadingsdb" />

                            <TextView
                                android:id="@+id/tv_avgSetFee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/grayheadingsdb" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Avg. Collection: "
                                android:textColor="@color/grayheadingsdb" />

                            <TextView
                                android:id="@+id/tv_avgCollection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/grayheadingsdb" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:paddingTop="@dimen/margin_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Last 30 Days: "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/CVAvgFeesCollection_tvLast30Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"

                                android:text="0"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:paddingTop="@dimen/margin_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="This session"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/CVAvgFeesCollection_tvThisSession"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0"
                                android:textColor="@color/colorBlack" />
                            />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:paddingTop="@dimen/margin_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Off target"
                                android:textColor="@color/orange" />

                            <TextView
                                android:id="@+id/CVAvgFeesCollection_tvOffTarget"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/orange" />
                            />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Receivables-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="1"
                app:cardCornerRadius="2dp"
                app:cardElevation="@dimen/card_elevation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/CVReceivables_tvtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_app_green"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="@string/receivables"
                        android:textColor="@color/grayheadingsdb"
                        android:textSize="@dimen/text_size_heading"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/ll_receivables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CVReceivables_tvtitle"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_small">

                        <RadioGroup
                            android:id="@+id/rg_receivables"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:padding="@dimen/padding_small"
                            >

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rb_today"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:checked="true"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Today"
                                android:textSize="@dimen/text_size"
                                android:gravity="center"
                                android:background="@drawable/radio_leftcurve_selector"
                                android:button="@android:color/transparent"
                                android:textColor="@drawable/radio_flat_text_selector"
                                />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rb_thisMonth"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Month"
                                android:textSize="@dimen/text_size"
                                android:gravity="center"
                                android:background="@drawable/radio_flattopbottomleftrightborder_selector"
                                android:button="@android:color/transparent"
                                android:textColor="@drawable/radio_flat_text_selector"
                                />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rb_thisSession"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Session"
                                android:textSize="@dimen/text_size"
                                android:gravity="center"
                                android:background="@drawable/radio_flattopbottomleftrightborder_selector"
                                android:button="@android:color/transparent"
                                android:textColor="@drawable/radio_flat_text_selector"
                                />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rb_closing"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Closing Details"
                                android:textSize="@dimen/text_size"
                                android:gravity="center"
                                android:background="@drawable/radio_rightcurve_selector"
                                android:button="@android:color/transparent"
                                android:textColor="@drawable/radio_flat_text_selector"
                                />


                        </RadioGroup>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/margin_small">

                            <LinearLayout
                                android:id="@+id/dummyRecHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="4"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=""
                                    android:background="@drawable/textview_border_black"
                                    android:padding="@dimen/padding_small"
                                    android:textSize="@dimen/text_receipt_size"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Receivable"
                                    android:background="@drawable/textview_border_black"
                                    android:padding="@dimen/padding_small"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_receipt_size"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Received"
                                    android:background="@drawable/textview_border_black"
                                    android:padding="@dimen/padding_small"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_receipt_size"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Balance"
                                    android:background="@drawable/textview_border_black"
                                    android:padding="@dimen/padding_small"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_receipt_size"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dummyRecData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_header"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/textview_border_black"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_small"
                                    android:textColor="@color/colorBlack"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_receipt_size" />

                                <TextView
                                    android:id="@+id/tv_receivables"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/textview_border_black"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_small"
                                    android:textColor="@color/colorBlack"
                                    android:text="0"
                                    android:textSize="@dimen/text_receipt_size" />

                                <TextView
                                    android:id="@+id/tv_received"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/textview_border_black"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_small"
                                    android:textColor="@color/colorBlack"
                                    android:text="0"
                                    android:textSize="@dimen/text_receipt_size" />

                                <TextView
                                    android:id="@+id/tv_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/textview_border_black"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_small"
                                    android:textColor="@color/colorBlack"
                                    android:text="0"
                                    android:textSize="@dimen/text_receipt_size" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_receivables"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CVReceivables_tvtitle"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="@dimen/margin_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Total Receivable: "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/CVReceivables_tvTotalDue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="1,562,387"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/margin_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Total Received: "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/CVReceivables_tvReceived"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="3"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/margin_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Balance"
                                android:textColor="@color/orange" />

                            <TextView
                                android:id="@+id/CVReceivables_tvBalance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="159"
                                android:textColor="@color/orange" />
                            />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_view_size"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="1"
                android:visibility="gone"
                app:cardCornerRadius="2dp"
                app:cardElevation="@dimen/card_elevation">

            </androidx.cardview.widget.CardView>


        </LinearLayout>



        <!--Highest Dues From Students-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_medium"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_app_green"
                    android:gravity="center"
                    android:padding="@dimen/margin_small"
                    android:text="@string/highest_dues_from_students"
                    android:textColor="@color/grayheadingsdb"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f7fafc"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="Name" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="GR:NO" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="Class/Sec" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="Amount" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHighestDuesFromStudent"
                    android:layout_width="match_parent"
                    android:paddingEnd="@dimen/padding"
                    android:clipToPadding="false"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/new_weakest_attendance">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/tvHighestDuesFromStudentSeeAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:gravity="right"
                    android:padding="@dimen/margin_small"
                    android:text="See all"
                    android:textColor="@color/carolina" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>