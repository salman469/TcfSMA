<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:id="@+id/ll_lastSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_lastSyncLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Last sync: "
            android:textColor="@color/gray_cell"
            android:textSize="@dimen/text_size_new"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lastSyncOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:text=""
            android:textColor="@color/gray_cell"
            android:textSize="@dimen/text_size_new" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_daysSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_lastSync"
        android:orientation="horizontal"

        android:weightSum="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lastSync">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daysSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Days since: "
                android:textColor="@color/gray_cell"
                android:textSize="@dimen/text_size_new"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_syncDaysSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:text=""
                android:textColor="@color/gray_cell"
                android:textSize="@dimen/text_size_new" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_daysSince"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_recordsPending"
        app:layout_constraintStart_toEndOf="@+id/ll_recordsPending"
        app:layout_constraintTop_toBottomOf="@+id/ll_lastSync">

        <ImageView
            android:id="@+id/CVSyncStatus_btnSyncNow"
            android:layout_width="@dimen/imageViewWidth"
            android:layout_height="@dimen/imageViewWidth"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_popup_sync"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recordsPending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_daysSince"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_daysSince">

        <TextView
            android:id="@+id/pendingSyncRecordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Sync:"
            android:textColor="@color/gray_cell"
            android:textSize="@dimen/text_size_new"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pendingRecordsSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text=""
            android:textColor="@color/gray_cell"
            android:textSize="@dimen/text_size_new" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>