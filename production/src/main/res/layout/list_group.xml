    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/iv_menu_parent_item"
        android:layout_width="@dimen/drawer_group_icons_width"
        android:layout_height="@dimen/drawer_group_icons_height"
