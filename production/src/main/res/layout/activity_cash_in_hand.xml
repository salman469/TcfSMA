<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical"
    tools:context=".Activities.FeesCollection.AccountStatement.AccountStatementActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llmainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/card"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical"
            android:visibility="visible"
            tools:context=".Activities.FeesCollection.CashInHandAndDeposit.CashInHandActivity">
            <!--Last Deposit Date-->
            <!--Today Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/today_date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTodayDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/admission_fees"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvAdmissionFees"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/exam_fees"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvExamFees"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/monthly_fees"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvMonthlyFees"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/books"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvBooks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/copies"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvCopies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/uniform"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvUniform"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/textview_border_black"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/others"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvOthers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/textview_border_gray"
                        android:gravity="end"
                        android:padding="@dimen/padding_small"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ch_margin"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/balance_after_reconciliation"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvBlncAfterReConciliation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ch_margin"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/total"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/btnDepositInBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ch_margin"
                android:layout_marginTop="@dimen/ch_margin"
                android:background="@drawable/button_background"
                android:text="@string/deposit_in_bank"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNoDataFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llmainLayout"
            android:layout_margin="@dimen/big_margin"
            android:gravity="center"
            android:text="No data found"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_big"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>