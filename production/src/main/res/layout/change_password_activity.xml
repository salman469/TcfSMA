<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@mipmap/bd"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/element_margin2"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_login_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_logo_height"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/element_margin2"
                android:scaleType="centerInside"
                android:src="@mipmap/logo2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_login_left"
                android:layout_marginRight="@dimen/margin_login_right"
                android:layout_marginBottom="@dimen/element_margin2"
                android:background="@drawable/spinner_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_margin2"
                    android:layout_marginBottom="@dimen/element_margin2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_current_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:drawableLeft="@mipmap/user_password"
                            android:drawablePadding="@dimen/padding"
                            android:hint="Current password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/padding_small" />

                        <TextView
                            android:id="@+id/currPassShow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_small"
                            android:background="@color/white_color"
                            android:padding="@dimen/padding_small"
                            android:text="Show"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#33FFFFFF" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:drawableLeft="@mipmap/user_password"
                            android:drawablePadding="@dimen/padding"
                            android:hint="New password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/padding_small" />

                        <TextView
                            android:id="@+id/newPassShow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_small"
                            android:background="@color/white_color"
                            android:padding="@dimen/padding_small"
                            android:text="Show"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#33FFFFFF" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_retype_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_color"
                            android:drawableLeft="@mipmap/user_password"
                            android:drawablePadding="@dimen/padding"
                            android:hint="Re-type new password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/padding_small" />

                        <TextView
                            android:id="@+id/rePassShow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_small"
                            android:background="@color/white_color"
                            android:padding="@dimen/padding_small"
                            android:text="Show"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#33FFFFFF" />

                    <!--<EditText-->
                    <!--android:id="@+id/et_code"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/white_color"-->
                    <!--android:drawablePadding="@dimen/padding"-->
                    <!--android:hint="Enter Code"-->
                    <!--android:imeOptions="actionDone"-->
                    <!--android:inputType="textPassword"-->
                    <!--android:padding="@dimen/padding_small" />-->

                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:id="@+id/til"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:passwordToggleEnabled="true"-->
                    <!--&gt;-->
                    <!--<android.support.design.widget.TextInputEditText-->
                    <!--android:id="@+id/userPass"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center"-->
                    <!--android:inputType="textPassword"-->
                    <!--/>-->

                    <!--</android.support.design.widget.TextInputLayout>-->
                    <Button
                        android:id="@+id/bt_change_pass"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orange"
                        android:text="Save Changes" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_login_left"
                android:layout_marginEnd="@dimen/margin_login_right"
                android:textStyle="bold|italic"
                android:layout_marginBottom="@dimen/margin_login_left"
                android:text="Password must be 8 characters long or more. Password must contain at least 1 number and 1 character."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/element_margin"
                android:text="Forgot password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>