<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_school"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    tools:context=".Activities.WeakestAttendanceActivity">

    <!--<include layout="@layout/header_layout" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7fafc"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_stName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <ImageView
                android:id="@+id/iv_stName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@android:drawable/arrow_up_float" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stGrno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR:NO" />

            <ImageView
                android:id="@+id/iv_stGrno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@android:drawable/arrow_up_float" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stClassSec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class/Sec" />

            <ImageView
                android:id="@+id/iv_stClassSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@android:drawable/arrow_up_float" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <ImageView
                android:id="@+id/iv_stAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@android:drawable/arrow_up_float" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHighestDuesFromStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white_color"
        android:elevation="@dimen/margin_small"
        android:padding="@dimen/padding_small" />
</LinearLayout>
