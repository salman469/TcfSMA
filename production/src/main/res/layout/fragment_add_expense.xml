<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:id="@+id/remaining_expensetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                tools:layout_editor_absoluteX="221dp"
                tools:layout_editor_absoluteY="75dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/attendance_btn"
                    android:backgroundTint="@color/light_app_green"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="120dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_approvedResign"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/attendance_btn_inside_banner"
                            android:backgroundTint="@color/darkGreen"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_expensetype_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:textSize="@dimen/text_big"
                                android:gravity="center"
                                android:lines="1"
                                android:textAlignment="center"
                                android:textColor="@color/white_2"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_expensetype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="@dimen/student_dashboard_banner_margin"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="@dimen/student_dashboard_banner_padding"
                            android:text="PETTY CASH REMAINING"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </FrameLayout>

            <RadioGroup
                android:id="@+id/rg_expensetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginEnd="@dimen/big_margin"
                android:layout_gravity="center"
                android:padding="@dimen/padding_small">


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_pettycash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_leftcurve_selector"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="Petty Cash"
                    android:textColor="@drawable/radio_flat_text_selector"
                    android:textSize="@dimen/text_size" />


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_advance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_flattopbottomborder_selector"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="Advance"
                    android:textColor="@drawable/radio_flat_text_selector"
                    android:textSize="@dimen/text_size" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_salary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_rightcurve_selector"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="Salary"
                    android:textColor="@drawable/radio_flat_text_selector"
                    android:textSize="@dimen/text_size" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/mid_layout_pettycash"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_weight="1"
                android:padding="@dimen/padding_small">

                <RadioGroup
                    android:id="@+id/rg_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible"
                    android:padding="@dimen/padding_small">


                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_cashinhand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_leftcurvewithoutrightborder_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingStart="@dimen/paddingLarge"
                        android:paddingEnd="@dimen/paddingLarge"
                        android:text="from cash in hand"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_rightcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingStart="@dimen/paddingLarge"
                        android:paddingEnd="@dimen/paddingLarge"
                        android:text="from bank"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/ll_expensehead_sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Expense head"
                            android:textColor="@color/colorBlack"
                            />

                        <Spinner
                            android:id="@+id/sp_expensehead"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:layout_weight="1.25"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id = "@+id/ll_expense_subheadlimit"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:visibility = "gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Expense Subhead Limit"
                            />

                        <TextView
                            android:id="@+id/tv_expense_subHead_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25"
                            android:padding="@dimen/padding_small"
                            android:background="@drawable/edittext_border"
                            android:textColor="@color/colorBlack" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_employee_sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Employee"
                            android:textColor="@color/colorBlack"
                            />

                        <Spinner
                            android:id="@+id/sp_employee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25"
                            android:spinnerMode="dialog"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_expenseDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/expenseDatelabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Expense Date"
                            android:textColor="@color/colorBlack"
                             />

                        <TextView
                            android:id="@+id/txt_ExpenseDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25"
                            android:textColor="@color/black"
                            android:background="@drawable/edittext_border"
                            android:drawableRight="@drawable/calendar"
                            android:padding="@dimen/padding_small"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_jvno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="J.V. #"
                            android:textColor="@color/colorBlack"
                             />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tv_jvno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1.25"
                            android:padding="@dimen/padding_small"
                            android:maxLength="7"
                            android:inputType="number"
                             />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Amount"
                            android:textColor="@color/colorBlack"
                             />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:maxLength="6"
                            android:layout_weight="1.25"
                            android:inputType="number"
                            android:padding="@dimen/padding_small"
                             />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_depositslipno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Deposite Slip #"
                            android:textColor="@color/colorBlack"
                             />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_depositslipno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:maxLength="10"
                            android:layout_weight="1.25"
                            android:inputType="number"
                            android:imeOptions="actionDone"

                            />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/llcheckno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Cheque #"
                            android:textColor="@color/colorBlack"
                             />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tv_checkno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:layout_weight="1.25"
                            android:padding="@dimen/padding_small"
                             />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:padding="@dimen/padding_small"
                        android:text="Attachments"
                        android:textColor="@color/colorBlack"
                         />


                    <LinearLayout
                        android:id="@+id/ll_receipt_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/student_dashboard_assc_margin_top"
                        android:layout_marginBottom="@dimen/student_dashboard_assc_margin_top"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_receipt_images"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            tools:listitem="@layout/custom_attachment_view"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Submit" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>