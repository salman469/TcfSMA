<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_EmpCode"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="@dimen/report_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_joinDate"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_Cadre"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_Designation"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_Status"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/txt_lastWorkingday"
                android:layout_width="@dimen/report_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text=""
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>