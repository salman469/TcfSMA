<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/drawer_child_icons_width"
        android:layout_height="@dimen/drawer_child_icons_height"
        android:layout_marginLeft="@dimen/drawer_child_padding"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:src="@mipmap/navigation_child_right_arrow" />

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size" />

</LinearLayout>