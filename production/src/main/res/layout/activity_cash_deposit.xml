<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.FeesCollection.CashInHandAndDeposit.CashDepositActivity">


        <!--Today Date-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/textview_border_black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/today_date"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTodayDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/textview_border_gray"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <!--Slip No -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/textview_border_black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/slip_sr_no"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/etSlipNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/textview_border_black"
                android:gravity="end"
                android:maxLength="10"
                android:inputType="text"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                android:padding="@dimen/padding_small"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/admission_fees"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvAdmissionFees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/exam_fees"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvExamFees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/monthly_fees"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvMonthlyFees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/books"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvBooks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/copies"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvCopies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/uniform"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvUniform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/textview_border_black"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/others"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvOthers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/textview_border_gray"
                    android:gravity="end"
                    android:padding="@dimen/padding_small"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ch_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/textview_border_black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_medium"
                android:text="Balance after Reconciliation"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvBlncAfterReConciliation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/textview_border_gray"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/textview_border_black"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/total"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/textview_border_gray"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ch_margin"
            android:background="@drawable/textview_border_black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_medium"
                android:text="Remarks"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/textview_border_gray"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:padding="@dimen/padding_small"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instruction: Please take the picture after deposit in bank. Bank stamp is compulsary."
                android:textColor="@color/red"
                android:textSize="@dimen/text_size"
                />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:padding="@dimen/padding_small"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/darkGreen"
            app:cardCornerRadius="@dimen/cardview_default_radius">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCaptureImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_camera" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="0.5"
                android:background="@drawable/button_background"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button" />

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="0.5"
                android:background="@drawable/button_background"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

