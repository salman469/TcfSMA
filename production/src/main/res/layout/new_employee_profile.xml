<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employee_listing_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tiny_margin"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding">

            <FrameLayout
                android:id="@+id/user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_capture"
                    android:layout_width="@dimen/ic_edit_profile_size"
                    android:layout_height="@dimen/ic_edit_profile_size"
                    android:layout_gravity="top|center_horizontal"
                    android:src="@mipmap/profile_pic"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <ImageView
                    android:id="@+id/btn_edit_profileImg"
                    android:layout_width="@dimen/new_nav_list_child_left_margin"
                    android:layout_height="@dimen/new_nav_list_child_left_margin"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/green_circle_bg"
                    android:padding="@dimen/margin_medium"
                    app:srcCompat="@drawable/ic_camera"

                    />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/attendance_header_f_name_margin"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_emp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGreen"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_green"
                    android:textSize="@dimen/text_size"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/attendance_header_f_name_margin"
                android:gravity="center_vertical|end"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_joiningDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/attendance_header_f_name_margin"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Code"
                            android:textSize="@dimen/text_size_xsmall" />


                        <TextView
                            android:id="@+id/tv_employeeCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/element_margin"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Id"
                            android:textSize="@dimen/text_size_xsmall" />


                        <TextView
                            android:id="@+id/tv_userId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="bottom"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingBottom="@dimen/tiny_margin">

            <ProgressBar
                android:id="@+id/profileProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/profileProgressCount"
                android:indeterminate="false"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:progressDrawable="@drawable/employee_progress_bar_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="Profile Completion"
                android:textColor="@color/light_app_green"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileProgressCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:textColor="@color/app_green"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:backgroundTint="@color/white"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Basic Info"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/btn_update"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:padding="@dimen/tiny_margin"
                    android:tint="@color/light_green"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/showEP"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:rotation="180"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding_4dp"
                    android:paddingEnd="@dimen/padding">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNIC"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/tv_cnic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Number"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/tv_MobileNumber"
                            android:layout_width="wrap_content"
                            android:autoLink="phone"
                            android:linksClickable="true"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="email"
                            android:linksClickable="true"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding"
                    android:paddingEnd="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Father's/Husband's Name"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/tv_fatherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mother's Name"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_small" />


                        <TextView
                            android:id="@+id/tv_motherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bank Details"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="@dimen/radio_margin"
                    android:layout_height="@dimen/radio_margin"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_small" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habib Bank Ltd."
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_small" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jehlum Road Branch"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Number"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_small" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1600340000164933"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:backgroundTint="@color/white"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qualifications"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/showQualification"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_noQual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"
                android:visibility="gone"
                android:text="No Qualification Found"
                android:textColor="@color/orange" />

            <LinearLayout
                android:id="@+id/QualScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_qualificationHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:maxHeight="@dimen/report_height">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:backgroundTint="@color/white"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Positions"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/showPosition"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />


            <TextView
                android:id="@+id/tv_noPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"
                android:visibility="gone"
                android:text="No Position History Found"
                android:textColor="@color/orange" />

            <LinearLayout
                android:id="@+id/PosScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_positionHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:maxHeight="@dimen/report_height">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_leaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leaves"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_addLeaves"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:padding="@dimen/tiny_margin"
                    android:src="@mipmap/new_ic_add" />

                <ImageView
                    android:id="@+id/showLeave"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_noLeaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="No Leaves Found"
                android:textColor="@color/orange"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_leaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/report_height"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearResignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/attendance_btn"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resignTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Separations"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/showResignation"
                    android:layout_width="@dimen/employee_edit_width_height"
                    android:layout_height="@dimen/employee_edit_width_height"
                    android:layout_gravity="end"
                    android:src="@mipmap/drop_down"
                    android:tint="@color/light_green" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_4dp"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:background="@color/light_gray" />


            <TextView
                android:id="@+id/tv_noResignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"
                android:visibility="gone"
                android:text="No Resignation History Found"
                android:textColor="@color/orange" />

            <LinearLayout
                android:id="@+id/RsgScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_resignHistory"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/report_height">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_resign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F6C989"
                android:text="Separation"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btn_terminate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:background="#E8BBBB"
                android:text="Terminate"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/app_green"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>