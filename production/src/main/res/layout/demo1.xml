<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_admission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/inner_relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/inner_relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/school_bar">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small">

                        <LinearLayout
                            android:id="@+id/headerSpinnerLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/new_admission_profile_top_margin"
                            android:layout_marginTop="@dimen/new_admission_header_school_spinner_margin_top"
                            android:background="@drawable/spinner_bg"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <Spinner
                                android:id="@+id/spinner_SelectSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                tools:listitem="@layout/new_spinner_layout"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/headerAreaLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="@id/headerSpinnerLayout"
                            app:layout_constraintStart_toStartOf="@id/headerSpinnerLayout"
                            app:layout_constraintTop_toBottomOf="@+id/headerSpinnerLayout">

                            <TextView
                                android:id="@+id/tv_areaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="North West"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size" />

                            <TextView
                                android:id="@+id/tv_regionName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:text="Nawshehra"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/new_admission_profile_bg_height"
                    android:layout_above="@+id/mid_layout"
                    android:layout_below="@+id/inner_relativelayout2"
                    android:background="#0a713a"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_curved_view_white" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/profile_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/new_admission_profile_top_margin"
                    tools:layout_editor_absoluteX="221dp"
                    tools:layout_editor_absoluteY="75dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:background="@drawable/attendance_btn"
                        android:backgroundTint="@color/light_app_green"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="150dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_approvedResign"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/attendance_btn_inside_banner"
                                android:backgroundTint="@color/darkGreen"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_approvedResignation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_marginStart="30dp"
                                    android:lines="1"
                                    android:layout_marginEnd="30dp"
                                    android:text="Rs. 20,000"
                                    android:autoSizeTextType="uniform"
                                    android:textColor="@color/white_2"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/student_dashboard_banner_margin"
                                android:padding="@dimen/student_dashboard_banner_padding"
                                android:text="CASH IN HAND"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="40dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </FrameLayout>

                <LinearLayout
                    android:id="@+id/mid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_image_layout"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/sv_school"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            app:iconifiedByDefault="false"
                            app:queryHint="Enter Deposit Slip Number">

                        </androidx.appcompat.widget.SearchView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Date"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp" />


                            <TextView
                                android:id="@+id/txt_currentdate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.25"
                                android:text=""
                                android:padding="@dimen/padding_small"
                                android:drawableEnd="@drawable/calendar"
                                android:background="@drawable/edittext_border"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="J.V. #"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/tv_jvno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:inputType="number"
                                android:layout_weight="1.25"
                                android:padding="@dimen/padding_small"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Deposite Slip #"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_depositslipno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_weight="1.25"
                                android:inputType="number"
                                android:text=""
                                android:textSize="18sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/padding_small"
                                android:text="Amount"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/tv_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.25"
                                android:text=""
                                android:inputType="number"
                                android:textSize="18sp" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_small"
                            android:text="Deposit Slip Image"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/student_dashboard_assc_margin_top"
                            >

                            <RelativeLayout
                                android:id="@+id/rl_addcheckimage"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/darkGreen"
                                android:gravity="center_vertical"
                                android:visibility="visible"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/tiny_margin">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_addcheckimage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="@dimen/camera_width"
                                    android:padding="7dp"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/add_box_green" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/rl_checkimage"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/darkGreen"
                                android:gravity="center_vertical"
                                android:visibility="gone"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/tiny_margin">

                                <ImageView
                                    android:id="@+id/iv_delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/close"
                                    android:layout_alignRight="@+id/ivcheckimage"
                                    android:layout_marginTop="@dimen/tiny_margin"
                                    android:layout_marginEnd="@dimen/tiny_margin"
                                    android:translationZ="180dp"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivcheckimage"
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center"
                                    android:padding="7dp"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:padding="@dimen/padding_small"
                                android:text="Comments"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"/>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_comments_dpositcashwithbank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_margin="5dp"
                                android:maxLines="3"
                                android:text="No Comments"
                                android:padding="@dimen/padding"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:background="@drawable/edittext_border" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:text="Correct Deposit" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
