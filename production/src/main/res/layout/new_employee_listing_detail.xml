<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/employee_listing_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinnny_margin"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tiny_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/profile_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/attendance_header_f_name_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayesha Karim"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_Cadre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Teacher (Faculty)"
                android:textColor="@color/darkGreen"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/app_green"
                android:textSize="@dimen/text_size"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/attendance_header_f_name_margin"
            android:gravity="center_vertical|end"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_joinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-Aug-19 > Current"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/attendance_header_f_name_margin"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Code"
                        android:textSize="@dimen/text_size_xsmall" />


                    <TextView
                        android:id="@+id/txt_EmpCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="786397"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/element_margin"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Id"
                        android:textSize="@dimen/text_size_xsmall" />


                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1034"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:gravity="bottom">

        <ProgressBar
            android:id="@+id/profileProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_toEndOf="@id/tag"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_centerVertical="true"
            android:progress="50"
            android:progressDrawable="@drawable/employee_progress_bar_green" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:textSize="@dimen/text_size_xsmall"
            android:text="Profile Completion"
            android:textColor="@color/app_green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileProgressCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tag"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium"
            android:text="50%"
            android:textColor="@color/light_app_green"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinnny_margin"
        android:background="@color/light_gray" />


</LinearLayout>