<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/student_listing_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinnny_margin"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tiny_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/profile_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/attendance_header_f_name_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_name_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="Ayesha Karim"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_class_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5-A"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_student_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10005"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:id="@+id/gr_No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text=" - 743"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/attendance_header_f_name_margin"
            android:gravity="center_vertical|end"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_admission_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="08-Aug-19 > Current"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/attendance_header_f_name_margin"
                android:gravity="end"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Fees"
                        android:textSize="@dimen/text_size_xsmall" />


                    <TextView
                        android:id="@+id/tv_monthly_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 25"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Category 3)"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_xsmall" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receivables"
                        android:textSize="@dimen/text_size_xsmall" />


                    <TextView
                        android:id="@+id/tv_receivables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 0"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:gravity="bottom">

        <ProgressBar
            android:id="@+id/profileProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_toStartOf="@id/ll"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:layout_alignParentStart="true"
            android:minHeight="10dip"
            android:layout_centerVertical="true"
            android:progress="0"
            android:progressDrawable="@drawable/employee_listing_gray_pp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:textSize="@dimen/text_size_xsmall"
            android:text="Profile Completion"
            android:textColor="@color/light_app_green"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium">


            <TextView
                android:id="@+id/profileProgressCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/promotionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/gray"
                android:layout_marginStart="@dimen/margin_login_left" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:layout_marginStart="@dimen/margin_login_left"
                android:text="Active" />
        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinnny_margin"
        android:background="@color/light_gray" />


</LinearLayout>