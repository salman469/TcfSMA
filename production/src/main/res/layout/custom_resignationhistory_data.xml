<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_marginTop="@dimen/margin_small"
        android:elevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_empCode"
                android:layout_width="@dimen/report_min_width"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_empName"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_empResignDate"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_empLWD"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_empStatus"
                android:layout_width="@dimen/report_min_width"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView

                android:id="@+id/tv_empResignType"
                android:layout_width="@dimen/report_min_width"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_empResignReason"
                android:layout_width="@dimen/minWidth"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
