<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/st_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:elevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        >

        <TextView
            android:id="@+id/gr_No"
            android:layout_width="@dimen/report_min_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GR.No"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_name_text"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Full Name"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_class_sec"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Class - Section"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_fee_category"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fee Category"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_monthly_fee"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Monthly Fee"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_total_dues"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Total Dues"
            android:textSize="@dimen/text_size"
             />

        <TextView
            android:id="@+id/tv_attendance"
            android:layout_width="@dimen/report_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Attendance"
            android:textSize="@dimen/text_size"
             />

    </LinearLayout>

</androidx.cardview.widget.CardView>