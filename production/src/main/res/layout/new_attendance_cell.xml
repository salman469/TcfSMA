<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attendacnce_cell_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tiny_margin"
    android:layout_marginTop="@dimen/tiny_margin"
    android:elevation="@dimen/card_elevation"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/light_blue_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="GR.No"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/attendance_cell_margin_header"
                android:text="Student"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/radio_margin"
                    android:text="P"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/radio_margin"
                    android:text="A"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/radio_header_margin_right"
                    android:text="L"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gr_No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_heading" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/attendance_cell_margin">

                <TextView
                    android:id="@+id/tv_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Zubair Soomro"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_big" />


                <LinearLayout
                    android:id="@+id/rl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_text"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/O"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_father_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:text="Mumtaz Ali Soomro"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_heading" />

                </LinearLayout>
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/rg_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="3">


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/present"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:buttonTint="@color/app_green"
                    android:checked="true"
                    android:textColor="@color/app_green"
                    android:textSize="@dimen/text_size" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/absent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size"
                    app:buttonTint="@color/red" />

                <androidx.appcompat.widget.AppCompatRadioButton

                    android:id="@+id/leaves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size"
                    app:buttonTint="@color/blue" />

            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>