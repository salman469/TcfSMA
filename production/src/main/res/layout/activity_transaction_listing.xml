<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:id="@+id/inner_relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/school_bar"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.9">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="@dimen/padding_small">


                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/new_admission_profile_top_margin"
                            android:layout_marginTop="@dimen/new_admission_header_school_spinner_margin_top"
                            android:background="@drawable/spinner_bg"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <Spinner
                                android:id="@+id/spinner_SelectSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                tools:listitem="@layout/new_spinner_layout"
                                android:spinnerMode="dialog"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/headerAreaLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="@id/l1"
                            app:layout_constraintStart_toStartOf="@id/l1"
                            app:layout_constraintTop_toBottomOf="@+id/l1">

                            <TextView
                                android:id="@+id/tv_areaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="North West"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size" />

                            <TextView
                                android:id="@+id/tv_regionName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:text="Nawshehra"
                                android:textColor="@color/white_2"
                                android:textSize="@dimen/text_size" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--            <include layout="@layout/search_header_employee" />-->
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/fee_entry_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="enterAlways"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0a713a"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_curved_view_white"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">



                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/sv_jvno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        app:iconifiedByDefault="false"
                        app:queryHint="Enter J.V Number">

                    </androidx.appcompat.widget.SearchView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <RadioGroup
                    android:id="@+id/rg_sub_head_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/padding_small">


                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_received"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding"
                        android:paddingLeft="16dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="@dimen/padding"
                        android:paddingRight="16dp"
                        android:paddingBottom="3dp"
                        android:text="Received"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding"
                        android:paddingLeft="16dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="@dimen/padding"
                        android:paddingRight="16dp"
                        android:paddingBottom="3dp"
                        android:text="Paid"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />


                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_startdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="50">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_class"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/gr_no_icon"
                            android:drawableStart="@drawable/gr_no_icon"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/margin_medium">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Date"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text_size" />

                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/black"
                                android:hint="Select date"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/calendar"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/viewDivider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>


                    <LinearLayout
                        android:id="@+id/ll_enddate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="50">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_class"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/gr_no_icon"
                            android:drawableStart="@drawable/gr_no_icon"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/margin_medium">

                            <TextView
                                android:id="@+id/tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grayheadingsdb"
                                android:text="End Date"
                                android:textSize="@dimen/text_size" />


                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/gray"
                                android:layout_height="wrap_content"
                                android:hint="Select date"
                                android:drawableEnd="@drawable/calendar"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_gravity="center"
                    >

                    <CheckBox
                        android:id="@+id/checkbox_successful"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_leftcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading"
                        android:text="Successful"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_pending"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_flattopbottomborder_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading"
                        android:text="Pending"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_rejected"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_rightcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading"
                        android:text="Rejected"
                        />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_small"
                        android:background="@drawable/radio_leftcurvewithoutrightborder_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingStart="@dimen/paddingLarge"
                        android:paddingEnd="@dimen/paddingLarge"
                        android:checked="false"
                        android:text="Bank"
                        android:textColor="@drawable/radio_flat_text_selector"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingStart="@dimen/paddingLarge"
                        android:paddingEnd="@dimen/paddingLarge"
                        android:background="@drawable/radio_rightcurve_selector"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:checked="false"
                        android:text="Cash"
                        android:textSize="@dimen/text_size_heading"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rg_transactiontype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_gravity="center"
                    >

                    <CheckBox
                        android:id="@+id/rb_alltransactiontype"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:visibility="gone"
                        android:text="Income"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />


                    <CheckBox
                        android:id="@+id/checkbox_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_leftcurve_selector"                            android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:text="Transfers"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                    <CheckBox
                        android:id="@+id/checkbox_expense"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_rightcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:text="Expense"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rg_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    >


                    <CheckBox
                        android:id="@+id/checkbox_pettycash"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_leftcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:text="Petty Cash"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                    <CheckBox
                        android:id="@+id/checkbox_advance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_flattopbottomborder_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"

                        android:text="Advance"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                    <CheckBox
                        android:id="@+id/checkbox_salary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_rightcurve_selector"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:text="Salary"
                        android:textColor="@drawable/radio_flat_text_selector"
                        android:textSize="@dimen/text_size_heading" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_expensehead_sp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_small"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_small"
                        android:text="Expense head"
                        android:textColor="@color/grayheadingsdb"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_expensehead"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:spinnerMode="dialog"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Total Transactions Found:"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_total_transactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="always"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_transactionlisting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="always"
                        android:paddingStart="@dimen/padding"
                        android:paddingEnd="@dimen/padding"
                        tools:listitem="@layout/custom_transaction_listing_data"
                        tools:visibility="visible">

                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>